<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <title>Movie App</title>
</head>
<body>
<header>
    <%- include('../partials/navbar') %>
</header>
<main>
    <div class="container">
        <a href="/movies" class="btn btn-danger btn-sm">Back</a>
        <div class="row d-flex justify-content-center">
            <div class="col-md-8">
                <div class="card">
                <div class="card-header">List Production House</div>
                <div class="card-body">
                    <form action="/movies/add" method="post">
                        <div class="mb-3">
                          <label for="name" class="form-label">Name</label>
                          <input type="text" class="form-control" id="name" aria-describedby="name" name="name">
                          <div id="emailHelp" class="form-text">e.g. Angry Men</div>
                        </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Released Year</label>
                            <input type="text" class="form-control" id="name" aria-describedby="name" name="released_year">
                            <div id="emailHelp" class="form-text">e.g. 1957</div>
                          </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Genre</label>
                            <select class="form-select" aria-label="Select genre" name="genre">
                                <option selected>-- SELECT --</option>
                                <option value="animation">Animation</option>
                                <option value="comedy">Comedy</option>
                                <option value="drama">Drama</option>
                                <option value="horor">Horor</option>
                                <option value="religious">Religious</option>
                                <option value="thriller">Thriller</option>
                              </select>
                          </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Production House</label>
                            <select class="form-select" aria-label="Select genre" name="ph">
                                <option selected>-- SELECT --</option>
                                <% datas.forEach(data => { %>
                                <option value="<%=data.id%>"><%= data.name_prodHouse %></option>
                                <% }) %>
                              </select>
                          </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                      </form>
                </div>
            </div>
            </div>
        </div>
    </div>
</main>
</body>
</html>
