<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <title>Movie App</title>
</head>
<body>
<header>
    <%- include('../partials/navbar') %>
</header>
<main>
    <div class="container">
        <a href="/movies" class="btn btn-danger btn-sm">Back</a>
        <div class="row d-flex justify-content-center">
            <div class="col-md-8">
                <div class="card">
                <div class="card-header">List Production House</div>
                <div class="card-body">
                    <form action="/movies/edit/<%=movie.id%>" method="post">
                        <div class="mb-3">
                          <label for="name" class="form-label">Name</label>
                          <input type="text" class="form-control" id="name" aria-describedby="name" name="name" value="<%= movie.name%>">
                          <div id="name" class="form-text">e.g. Angry Men</div>
                        </div>
                        <div class="mb-3">
                            <label for="year" class="form-label">Released Year</label>
                            <input type="text" class="form-control" id="year" aria-describedby="name" name="released_year" value="<%= movie.released_year%>">
                            <div id="year" class="form-text">e.g. 1957</div>
                          </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Genre</label>
                            <select class="form-select" aria-label="Select genre" name="genre">
                                <option <%=movie.genre == '' ? 'selected' : '' %> disabled value=''>-- SELECT --</option>
                                <option <%=movie.genre == 'animation' ? 'selected' : '' %> value='animation'>Animation</option>
                                <option <%=movie.genre == 'comedy' ? 'selected' : '' %> value='comedy'>Comedy</option>
                                <option <%=movie.genre == 'drama' ? 'selected' : '' %> value='drama'>Drama</option>
                                <option <%=movie.genre == 'horor' ? 'selected' : '' %> value='horor'>Horor</option>
                                <option <%=movie.genre == 'religious' ? 'selected' : '' %> value='religious'>Religious</option>
                                <option <%=movie.genre == 'thriller' ? 'selected' : '' %> value='thriller'>Thriller</option>
                              </select>
                          </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Production House</label>
                            <select class="form-select" aria-label="Select genre" name="ph">
                                <option disabled>-- SELECT --</option>
                                <% ph.forEach(phs => { %>)
                                <option <%=movie.ProductionHouseId == phs.id ? 'selected' : '' %> value=<%=phs.id%>><%=phs.name_prodHouse%></option>
                                <% }) %>
                              </select>
                          </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                      </form>
                </div>
            </div>
            </div>
        </div>
    </div>
</main>
</body>
</html>
